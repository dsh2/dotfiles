# ls
if [ "$UNAME" = "Darwin" ]; then
		LS_CMD=gls
else
		LS_CMD=ls
fi
l() { 
		$LS_CMD \
				--almost-all \
				--author \
				--color=always \
				--file-type \
				--format=long \
				--indicator-style=slash \
				--quoting-style=shell \
				--time-style='+%F %T' \
				"$@";
}
alias lt='l -tr'
alias ltr=lt
alias fr='fc -R'
alias lnn=lnav
alias r=ranger
alias zz='source ~/.zshrc'
alias msf='./msfconsole --real-readline --quiet -r /home/dsf/.dotfiles/msfc.rc'
alias ms=msf

# Vim aliases
alias v='vim -X'
vs() { v "$1" && echo -e "\nSourcing \"$1\"..."; time source "$1"; echo -e "\nDone sourcing \"$1\"...";}
alias v.=vs
gv() { gvim "$*"; raiseX; }
alias last='v -S ~/.vim/lastsession'
alias glast='gv -S ~/.vim/lastsession'
alias vl=last
viminfo() { vim -R -c "Info $1 $2" -c "bdelete 1" -c "setlocal nomodifiable" ; }
vimman() { vim -R -c "Man $1 $2" -c "bdelete 1" -c "setlocal nomodifiable" ; }

