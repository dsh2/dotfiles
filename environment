# Path
pathprepend $HOME/bin
# pathprepend $HOME/.rvm/bin
pathprepend $HOME/src/GO/bin
pathprepend $HOME/.dotfiles/bin
pathprepend $HOME/.dotfiles/bin
pathprepend $HOME/.dotfiles/bin/github-find-all-forks PYTHONPATH
pathprepend /sbin
pathprepend /usr/sbin
pathprepend /usr/local/bin
pathprepend /usr/local/sbin
pathprepend /opt/local/bin
pathprepend /opt/local/sbin
pathprepend /usr/lib/ccache
pathprepend "/opt/local/share/man" "MANPATH"

# Android 
export ANDROID_AVD_HOME="$HOME/.android/avd/"
export ANDROID_SDK="$HOME/src/android-sdk"
export ANDROID_SDK_ROOT=$ANDROID_SDK
export ANDROID_PLATTFORM=$ANDROID_SDK_ROOT/platforms/android-24
export ANDROID_HOME=$ANDROID_SDK
export ANDROID_NDK=$ANDROID_SDK/ndk-bundle
export ANDROID_NDK_ROOT=$ANDROID_NDK
export NDK=$ANDROID_NDK
export AOSP_HOME=$HOME/src/AOSP
export GRADLE_HOME=/opt/local/share/java/gradle
pathprepend "$ANDROID_SDK/platform-tools"
pathprepend "$ANDROID_SDK/tools"
pathprepend "$NDK"
# export JAVA_HOME=/usr/lib/jvm/java-7-openjdk-amd64/
# export JAVA_BINDIR=$JAVA_HOME/bin
# export JDK_HOME=$JAVA_HOME
# export JRE_HOME=$JAVA_HOME

# Pager
export LESS=cRMiWSJ
export PAGER=less
# export PAGER="/home/dsf/.dotfiles/fzf/target/fzf-linux_amd64 --tac --bind 'ctrl-space:bottom'"
export GIT_PAGER='less -F'
alias less=$PAGER
alias zless=$PAGER

# L10n
export LANG=en_US.UTF-8
export LANGUAGE=$LANG
export LC_ALL=en_US.UTF-8
export LC_CTYPE=en_US.UTF-8

# Editor
export VISUAL='vim -X'
export EDITOR=$VISUAL
export SUDO_EDITOR=$VISUAL

# Miscellaneous
export BC_ENV_ARGS="-q $HOME/.bcrc"
export BROWSER=/usr/bin/google-chrome-stable
export GOPATH=$HOME/src/GO:/home/dsf/src/CRYPTO/boringssl/ssl/test/runner
export HH_CONFIG=hicolor
export HTML_TIDY=~/.tidy_config
export SSLKEYLOGFILE=$HOME/ssl_key_log
export USE_CCACHE=1
export XENVIRONMENT=$HOME/.Xresources
export TSHARK=/usr/bin/tshark
export WIRESHARK=/usr/bin/wireshark

if [ ! $SSH_TTY ]; then
	if [ -z $DISPLAY  ]; then
		export DISPLAY=:0.0
	fi
fi

export MYHOSTNAME=${HOSTNAME/.*/}
[ -e ~/.environment.local ] && source ~/.environment.local 
