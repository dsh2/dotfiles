# ControlPath ~/.ssh/cm/%r@%h:%p%%%n
ControlPath ~/.ssh/cm/%h-%C

Include ~/.ssh/hosts/*/config
Include ~/.ssh/config.local

AddKeysToAgent confirm
StrictHostKeyChecking ask 
IdentitiesOnly yes
ServerAliveInterval 10
ServerAliveCountMax 2
UpdateHostKeys ask

LocalCommand  ~/.ssh/hosts/%n/local_command.sh %C %d %h %i %L %l %n %p %r %T %u &

ControlMaster auto

# EscapeChar ^^
HashKnownHosts no
UserKnownHostsFile ~/.ssh/known_hosts ~/.ssh/known_hosts_common

Match exec "[ $(hostname) = p3-01964l ]"
ControlPersist yes
