# vim: filetype=config fdm=marker sw=4 ts=4 commentstring=#\ %s

# Modifiers {{{
set $shift Shift
set $ctrl Control
set $meta Mod4
set $alt Mod1
# }}}

# Direction keys {{{
set $up k
set $down j
set $left h
set $right l
# }}}

# Colors {{{
# class                 border  backgr. text    indicator child_border
