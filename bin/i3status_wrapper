#!/bin/sh
# vim: ft=sh

output_rf_status() {
	for id in wifi wwan bluetooth; do
		rfkill list $id | grep -q -- "Soft blocked: yes"
		eval $id=$?
	done

	(($wifi)) && echo -n ðŸ”´
	(($bluetooth)) && echo -n ðŸ”µ
	(($wwan)) && echo -n âšª

	((!$wifi && !$bluetooth && !$wwan)) && echo -n ðŸ›ª
}

status() {
	i3status | while :; do
		read line
		# echo "$line | $(output_rf_status)"
		echo "$line"
	done
}

status
