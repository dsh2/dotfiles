# vim: ft=conf

# quit
map <Esc> reload
map [normal] q quit
map [fullscreen] q quit
map [normal] Q quit
map [fullscreen] Q quit

# abort
map [normal] <C-[> abort
map [fullscreen] <C-[> abort
map [normal] <C-c> abort
map [fullscreen] <C-c> abort

# scroll
map [normal] b scroll full-up
map [fullscreen] b scroll full-up

# navigate
map [normal] , navigate previous
map [normal] . navigate next
map [fullscreen] , navigate previous
map [fullscreen] . navigate next
map [normal] ] navigate full-down
map [normal] [ navigate full-up
map [fullscreen] ] navigate full-down
map [fullscreen] [ navigate full-up

# toggle_fullscreen
map [normal]     e toggle_fullscreen
map [normal]     E toggle_fullscreen
map [fullscreen] e toggle_fullscreen
map [fullscreen] E toggle_fullscreen

# toggle_page_mode
map [normal] w toggle_page_mode
map [fullscreen] w toggle_page_mode

# toggle_statusbar
map [normal] t toggle_statusbar
map [fullscreen] t toggle_statusbar

# zoom
map [fullscreen] = zoom 100%
map [normal] = zoom 100%
map [fullscreen] i zoom in 
map [normal] i zoom in 
map [fullscreen] o zoom out
map [normal] o zoom out

# jumplist
map [normal] <C-o> jumplist backward
map [normal] <C-i> jumplist forward
map [fullscreen] <C-o> jumplist backward
map [fullscreen] <C-i> jumplist forward

# settings
set window-width 1980
set window-height 1080
set adjust-open "width"

set font "Terminus normal 11"
set statusbar-bg "#202020"
set statusbar-fg "#606060"
set inputbar-bg "#202020"
set inputbar-fg "#909090"

set guioptions shv
set incremental-search true
set page-cache-size 50
set pages-per-row 2
set link-hadjust  
set search-hadjust
set show-directories

set scroll-wrap false
set statusbar-basename true
set selection-clipboard "clipboard"

set recolor-lightcolor "#333333"
set recolor-keephue true
set recolor-reverse-video true
